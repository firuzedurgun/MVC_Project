@model MVC_Project.Models.Entity.CustomersTable
@{
    ViewBag.Title = "NewCustomer";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class=" form-group">
    <div>
        <label>Customer Name</label>
        @Html.TextBoxFor(m=>m.CUSTOMERNAME,new {@class="form-control"})
        @Html.ValidationMessageFor(m=>m.CUSTOMERNAME,"",new {@style="color:green"})
    </div>
    
    <div>
        <label>Customer Surname</label>
        <input type="text" class="form-control" name="CUSTOMERSURNAME"/>
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">ADD NEW CUSTOMER</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('Customer addition has been completed');
        });
    </script>
</form>


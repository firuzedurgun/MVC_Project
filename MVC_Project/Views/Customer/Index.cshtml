@using MVC_Project.Models.Entity
@model List<CustomersTable>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm("Index", "Customer", FormMethod.Get))
 {
    <p>
        <b>Search Customer:</b> @Html.TextBox("p")
        <input type="submit" value="Search"/>
    </p>
 }

<table class="table table-bordered">
    <tr>
        <th>CUSTOMER ID</th>
        <th>CUSTOMER NAME</th>
        <th>CUSTOMER SURNAME</th>
        <th>DELETE</th>
        <th>UPDATE</th>
        <th>ALERT</th>
    </tr>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <th>@customer.CUSTOMERID</th>
                <td>@customer.CUSTOMERNAME</td>
                <td>@customer.CUSTOMERSURNAME</td>
                <td><a href="/CUSTOMER/DELETE/@customer.CUSTOMERID" class=" btn btn-danger">DELETE</a></td>
                <td><a href="/CUSTOMER/GetCustomer/@customer.CUSTOMERID" class="btn btn-success">UPDATE</a></td>
                <td>@Html.ActionLink("DELETE BUTTON", "DELETE", new { id = customer.CUSTOMERID }, new { @class = "btn btn-warning", onclick = "return confirm('Are you sure you want to delete?')" })</td>
            </tr>
        }
    </tbody>
</table>
<a href="/CUSTOMER/NewCustomer/" class="btn btn-primary">ADD NEW CUSTOMER</a>
